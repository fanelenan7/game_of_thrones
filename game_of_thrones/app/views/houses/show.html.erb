<div class="edit-house">
<a href="/houses/edit"><h2>House <%= @house.name %></h2></a>
</div>

<ul class="each-house">
  <% @house.characters.each do |character| %>
    <li>
      <h3 class="char-name"><%= character.char_name %></h3><br>
      <div class="character-portrait" style="background: url(<%= character.img %>); background-size:cover; background-position: center;"></div>
        <br>
      <h3><%= link_to "Edit", edit_house_character_path(@house), :class => "edit-button" %></h3>
    </li>
  <% end %>
</ul>
<div class="edit-house">
<h3><%= link_to "Add Members", new_house_character_path(@house), :class => "add-members" %></h3>
</div>
